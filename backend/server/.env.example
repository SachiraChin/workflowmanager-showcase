# Server Environment Variables
# Copy this file to .env and fill in your values
# The server will auto-load these on startup

# =============================================================================
# LLM API Keys
# =============================================================================

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =============================================================================
# Media Provider API Keys
# =============================================================================

# Leonardo AI API Key
LEONARDO_API_KEY=your-leonardo-api-key-here

# MidAPI (MidJourney) API Key
MIDAPI_API_KEY=your-midapi-key-here

# ElevenLabs API Key (for audio/music generation)
# Get your key at: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# =============================================================================
# Database
# =============================================================================

# MongoDB connection (defaults shown)
# MONGODB_URI=mongodb://localhost:27017
# MONGODB_DATABASE=workflow_db

# =============================================================================
# Media Storage
# =============================================================================

# Base path for media storage
# Images are stored in {MEDIA_BASE_PATH}/images
# Videos are stored in {MEDIA_BASE_PATH}/videos
# These directories will be created if they don't exist
MEDIA_BASE_PATH=/path/to/media

# Server base URL for generating media URLs (clients will use this)
# SERVER_BASE_URL=http://localhost:9000

# =============================================================================
# Authentication & Security
# =============================================================================

# JWT Secret (change in production!)
# JWT_SECRET_KEY=your-secret-key-change-in-production

# Cookie settings for authentication
# COOKIE_SECURE=false      # Set true in production (HTTPS only)
# COOKIE_SAMESITE=lax      # "lax" for dev, "strict" for production
# COOKIE_DOMAIN=           # None = current domain only

# =============================================================================
# CORS
# =============================================================================

# Allowed origins for CORS (comma-separated)
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000
