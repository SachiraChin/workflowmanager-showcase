# Worker Environment Variables
# Copy this file to .env and fill in your values
# The worker will auto-load these on startup

# =============================================================================
# Database
# =============================================================================

# MongoDB connection (must match server configuration)
# MONGODB_URI=mongodb://localhost:27017
# MONGODB_DATABASE=workflow_db

# =============================================================================
# Media Provider API Keys
# =============================================================================

# Leonardo AI API Key (required for Leonardo media generation)
LEONARDO_API_KEY=your-leonardo-api-key-here

# MidAPI (MidJourney) API Key (required for MidJourney media generation)
MIDAPI_API_KEY=your-midapi-key-here

# Stable Diffusion Forge API URL (required for local SD generation)
# Points to your SD WebUI Forge instance with sd-webui-forge-remote-api extension
# SD_FORGE_API_URL=http://192.168.1.100:7860

# ElevenLabs API Key (required for audio/music generation)
# Get your key at: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# =============================================================================
# Media Storage
# =============================================================================

# Base path for media storage (must match server configuration)
# Images are stored in {MEDIA_BASE_PATH}/images
# Videos are stored in {MEDIA_BASE_PATH}/videos
# These directories must be accessible by both server and worker
MEDIA_BASE_PATH=/path/to/media

# Server base URL for generating media URLs
# Used when building URLs that clients will use to access generated content
# SERVER_BASE_URL=http://localhost:9000

# =============================================================================
# Worker Configuration
# =============================================================================

# Heartbeat interval in seconds (default: 5)
# How often the worker updates its heartbeat while processing a task
# WORKER_HEARTBEAT_INTERVAL=5

# Stale task threshold in seconds (default: 30)
# Tasks with heartbeat older than this are considered stale and reset
# WORKER_STALE_THRESHOLD=30

# Poll interval in seconds (default: 1)
# How often to check for new tasks when idle
# WORKER_POLL_INTERVAL=1
