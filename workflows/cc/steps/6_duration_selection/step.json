{
  "step_id": "duration_selection",
  "name": "Step {step_number}: Select Duration",
  "description": "Choose the duration for your pet video",
  "modules": [
    {
      "module_id": "user.select",
      "inputs": {
        "resolver_schema": {
          "type": "object",
          "properties": {
            "data": { "resolver": "server" }
          }
        },
        "prompt": "Select video duration",
        "data": [
          {
            "id": 1,
            "label": "15 seconds",
            "description": "Quick clip - perfect for social media reels",
            "video_duration": 15,
            "paragraph_line_count": 3,
            "sound_track_duration": 20
          },
          {
            "id": 2,
            "label": "30 seconds",
            "description": "Short story - enough time for a heartfelt moment",
            "video_duration": 30,
            "paragraph_line_count": 4,
            "sound_track_duration": 40
          },
          {
            "id": 3,
            "label": "60 seconds",
            "description": "Full story - room to tell a complete narrative",
            "video_duration": 60,
            "paragraph_line_count": 5,
            "sound_track_duration": 70
          }
        ],
        "schema": {
          "$ref": "schemas/cc_duration_display_schema.json",
          "type": "json"
        },
        "multi_select": false,
        "mode": "select"
      },
      "outputs_to_state": {
        "selected_indices": "duration_indices",
        "selected_data": "duration_selection"
      },
      "name": "select_duration"
    }
  ]
}
