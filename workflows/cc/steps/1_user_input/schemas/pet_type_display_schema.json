{
  "type": "array",
  "display": "visible",
  "render_as": "card-stack",
  "items": {
    "type": "object",
    "display": "visible",
    "render_as": "card",
    "nudges": ["index-badge"],
    "selectable": true,
    "properties": {
      "id": {
        "type": "string",
        "display": false
      },
      "label": {
        "type": "string",
        "display": true,
        "render_as": "card-title"
      },
      "description": {
        "type": "string",
        "display": true,
        "render_as": "card-subtitle"
      }
    }
  }
}
