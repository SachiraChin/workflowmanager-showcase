{
  "type": "array",
  "render_as": "card-stack",
  "items": {
    "type": "object",
    "selectable": true,
    "properties": {
      "id": {
        "type": "string",
        "display": false
      },
      "label": {
        "type": "string",
        "display": true,
        "render_as": "card-title"
      },
      "description": {
        "type": "string",
        "display": true,
        "render_as": "card-subtitle"
      },
      "visual_tone": {
        "type": "object",
        "display": true,
        "display_label": "Visual Tone",
        "properties": {
          "mood": {
            "type": "string",
            "display": true,
            "display_label": "Mood"
          },
          "lighting": {
            "type": "string",
            "display": true,
            "display_label": "Lighting"
          },
          "energy": {
            "type": "string",
            "display": true,
            "display_label": "Energy",
            "highlight": true
          }
        }
      },
      "story_angles": {
        "type": "array",
        "display": true,
        "display_label": "Story Ideas",
        "display_format": "{{ value | join(' | ') }}"
      }
    }
  }
}
