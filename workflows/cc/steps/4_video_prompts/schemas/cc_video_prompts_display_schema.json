{
  "type": "object",
  "display": "visible",
  "render_as": "section",
  "properties": {
    "scene_title": {
      "type": "string",
      "display": true,
      "render_as": "section-title"
    },
    "motion_summary": {
      "type": "string",
      "display": true,
      "render_as": "section-summary",
      "display_label": "Motion Summary",
      "highlight": true
    },
    "prompts": {
      "type": "object",
      "display": "passthrough",
      "properties": {
        "motion_2_0": {
          "type": "object",
          "display": "visible",
          "display_label": "Motion 2.0",
          "render_as": "card",
          "nudges": ["index-badge"],
          "properties": {
            "positive_prompt": {
              "type": "string",
              "display": true,
              "render_as": "content-panel",
              "display_label": "Positive Prompt"
            },
            "negative_prompt": {
              "type": "string",
              "display": true,
              "display_label": "Negative Prompt",
              "render_as": "content-panel",
              "highlight": true,
              "highlight_color": "#FF6B6B"
            },
            "motion_strength": {
              "type": "string",
              "display": true,
              "display_label": "Strength",
              "render_as": "card-subtitle",
              "highlight": true,
              "highlight_color": "#4ECDC4"
            },
            "motion_notes": {
              "type": "string",
              "display": true,
              "render_as": "card-subtitle",
              "display_label": "Notes"
            }
          }
        },
        "midjourney_animate": {
          "type": "object",
          "display": "visible",
          "display_label": "Midjourney Animate",
          "render_as": "card",
          "nudges": ["index-badge"],
          "properties": {
            "prompt_a": {
              "type": "string",
              "display": true,
              "render_as": "content-panel",
              "display_label": "Prompt A (Start)"
            },
            "prompt_b": {
              "type": "string",
              "display": true,
              "render_as": "content-panel",
              "display_label": "Prompt B (End)"
            },
            "negative_prompt": {
              "type": "string",
              "display": true,
              "render_as": "content-panel",
              "display_label": "Negative Prompt",
              "highlight": true,
              "highlight_color": "#FF6B6B"
            },
            "transition_notes": {
              "type": "string",
              "display": true,
              "display_label": "Transition",
              "highlight": true,
              "highlight_color": "#7B68EE",
              "render_as": "card-subtitle"
            }
          }
        }
      }
    }
  }
}
