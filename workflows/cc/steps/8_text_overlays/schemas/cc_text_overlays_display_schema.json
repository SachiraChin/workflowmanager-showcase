{
  "type": "object",
  "_ux.display": "passthrough",
  "properties": {
    "text_sets": {
      "type": "array",
      "_ux.display": "visible",
      "_ux.render_as": "card-stack",
      "items": {
        "type": "object",
        "_ux": {
          "display": "visible",
          "render_as": "card",
          "selectable": true
        },
        "properties": {
          "set_id": {
            "type": "string",
            "_ux.display": false
          },
          "set_description": {
            "type": "string",
            "_ux": {
              "display": true,
              "render_as": "card-title",
              "nudges": ["copy"]
            }
          },
          "paragraphs": {
            "type": "array",
            "_ux.display": "passthrough",
            "items": {
              "type": "object",
              "_ux.display": "passthrough",
              "properties": {
                "paragraph_id": {
                  "type": "integer",
                  "_ux.display": false
                },
                "sentences": {
                  "type": "array",
                  "_ux": {
                    "display": true,
                    "display_format": "{{ value | join('\n') }}\n",
                    "nudges": ["copy"]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
