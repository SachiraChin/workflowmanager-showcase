{
  "type": "object",
  "_ux.display": "passthrough",
  "properties": {
    "text_sets": {
      "type": "array",
      "_ux.display": "visible",
      "_ux.render_as": "section-list",
      "items": {
        "type": "object",
        "_ux.display": "visible",
        "_ux.render_as": "section",
        "properties": {
          "set_id": {
            "type": "string",
            "_ux.display": true,
            "_ux.render_as": "section-title"
          },
          "set_description": {
            "type": "string",
            "_ux": {
              "display": true,
              "render_as": "section-summary",
              "highlight": true
            }
          },
          "paragraphs": {
            "type": "array",
            "_ux.display": "visible",
            "_ux.render_as": "card-stack",
            "items": {
              "type": "object",
              "_ux": {
                "display": "visible",
                "render_as": "card",
                "selectable": true
              },
              "properties": {
                "paragraph_id": {
                  "type": "integer",
                  "_ux.display": false
                },
                "sentences": {
                  "type": "array",
                  "_ux": {
                    "display": true,
                    "display_label": "Text",
                    "display_format": "{{ value | join('\n') }}"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
