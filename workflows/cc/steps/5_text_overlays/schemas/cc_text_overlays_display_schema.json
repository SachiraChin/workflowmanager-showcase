{
  "type": "object",
  "display": "passthrough",
  "properties": {
    "text_sets": {
      "type": "array",
      "display": "visible",
      "render_as": "section-list",
      "items": {
        "type": "object",
        "display": "visible",
        "render_as": "section",
        "properties": {
          "set_id": {
            "type": "string",
            "display": true,
            "render_as": "section-title"
          },
          "set_description": {
            "type": "string",
            "display": true,
            "render_as": "section-summary",
            "highlight": true
          },
          "paragraphs": {
            "type": "array",
            "display": "visible",
            "render_as": "card-stack",
            "items": {
              "type": "object",
              "display": "visible",
              "render_as": "card",
              "nudges": ["index-badge"],
              "selectable": true,
              "properties": {
                "paragraph_id": {
                  "type": "integer",
                  "display": false
                },
                "sentences": {
                  "type": "array",
                  "display": true,
                  "display_label": "Text",
                  "display_format": "{{ value | join('\n') }}"
                }
              }
            }
          }
        }
      }
    }
  }
}
