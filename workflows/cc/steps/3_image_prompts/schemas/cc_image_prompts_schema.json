{
  "type": "object",
  "properties": {
    "scene_title": {
      "type": "string",
      "description": "The title of the scene these prompts are for"
    },
    "key_moment": {
      "type": "string",
      "description": "Brief description of the key visual moment being captured"
    },
    "prompts": {
      "type": "object",
      "properties": {
        "midjourney": {
          "type": "object",
          "properties": {
            "prompt": {
              "type": "string",
              "description": "Midjourney prompt text only (no inline parameters or metadata fields)"
            },
            "style_notes": {
              "type": "string",
              "description": "Brief note on the artistic style/mood targeted"
            }
          },
          "required": ["prompt", "style_notes"],
          "additionalProperties": false
        },
        "leonardo": {
          "type": "object",
          "properties": {
            "prompt": {
              "type": "string",
              "description": "Leonardo Phoenix optimized prompt"
            },
            "style_notes": {
              "type": "string",
              "description": "Brief note on the style/quality targeted"
            }
          },
          "required": ["prompt", "style_notes"],
          "additionalProperties": false
        },
        "openai": {
          "type": "object",
          "properties": {
            "prompt": {
              "type": "string",
              "description": "OpenAI GPT Image prompt optimized for photorealistic and artistic generation"
            },
            "camera_notes": {
              "type": "string",
              "description": "Camera angle/framing suggestions for the image"
            }
          },
          "required": ["prompt", "camera_notes"],
          "additionalProperties": false
        },
        "stable_diffusion": {
          "type": "object",
          "properties": {
            "tag_prompt": {
              "type": "string",
              "description": "Token-based SD prompt with comma-separated keywords and optional weights like (keyword:1.2)"
            },
            "natural_prompt": {
              "type": "string",
              "description": "Natural language SD prompt with flowing descriptive sentences"
            },
            "negative_prompt": {
              "type": "string",
              "description": "Token-based negative prompt to avoid artifacts, anatomical issues, and quality problems"
            },
            "style_notes": {
              "type": "string",
              "description": "Brief note on the visual style and quality targeted"
            }
          },
          "required": ["tag_prompt", "natural_prompt", "negative_prompt", "style_notes"],
          "additionalProperties": false
        }
      },
      "required": ["midjourney", "leonardo", "openai", "stable_diffusion"],
      "additionalProperties": false
    }
  },
  "required": ["scene_title", "key_moment", "prompts"],
  "additionalProperties": false
}
