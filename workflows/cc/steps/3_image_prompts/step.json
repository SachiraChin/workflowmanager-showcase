{
  "step_id": "image_prompts",
  "name": "Step {step_number}: Generate Image Prompts",
  "description": "Generate optimized prompts for Midjourney, Leonardo Phoenix, OpenAI, and Stable Diffusion",
  "modules": [
    {
      "module_id": "media.generateV2",
      "inputs": {
        "resolver_schema": {
          "type": "object",
          "properties": {
            "prompt_config": {
              "resolver": "server"
            },
            "display_schema": {
              "resolver": "server"
            }
          }
        },
        "action_type": "txt2img",
        "providers": [
          "midjourney",
          "leonardo",
          "openai",
          "stable_diffusion"
        ],
        "prompt_config": {
          "resolver_schema": {
            "type": "object",
            "properties": {
              "system": {
                "resolver": "server"
              },
              "user": {
                "resolver": "server"
              },
              "shared_prompt": {
                "resolver": "server"
              },
              "provider_prompts": {
                "resolver": "server"
              },
              "metadata": {
                "resolver": "server"
              }
            }
          },
          "provider": "openai",
          "ai_config": {},
          "metadata": {
            "step_id": "{{ step.step_id }}"
          },
          "system": [
            {
              "$ref": "prompts/cc_role_prompt_engineer.txt",
              "type": "text",
              "cache_ttl": 10800
            },
            {
              "$ref": "prompts/cc_image_prompts_system.txt",
              "type": "text",
              "cache_ttl": 10800
            }
          ],
          "user": {
            "$ref": "prompts/cc_image_prompts_user.txt",
            "type": "jinja2"
          },
          "shared_prompt": {
            "$ref": "prompts/cc_image_prompts_shared.txt",
            "type": "text"
          },
          "provider_prompts": {
            "midjourney": {
              "$ref": "prompts/cc_image_prompts_provider_midjourney.txt",
              "type": "text"
            },
            "leonardo": {
              "$ref": "prompts/cc_image_prompts_provider_leonardo.txt",
              "type": "text"
            },
            "openai": {
              "$ref": "prompts/cc_image_prompts_provider_openai.txt",
              "type": "text"
            },
            "stable_diffusion": {
              "$ref": "prompts/cc_image_prompts_provider_stable_diffusion.txt",
              "type": "text"
            }
          }
        },
        "display_schema": {
          "$ref": "schemas/cc_image_prompts_display_schema.json",
          "type": "json"
        },
        "title": "Generate and Select Images"
      },
      "outputs_to_state": {
        "selected_content_id": "selected_image_id",
        "selected_content": "selected_image_data",
        "generations": "image_generations",
        "generated_prompts": "image_prompts"
      },
      "sub_actions": [
        {
          "id": "image_generation",
          "label": "Generate Images",
          "loading_label": "Generating...",
          "hidden": true,
          "actions": [
            {
              "type": "self_sub_action"
            }
          ]
        }
      ],
      "retryable": {
        "default_option": "continue",
        "options": [
          {
            "id": "continue",
            "mode": "continue",
            "label": "Accept and continue",
            "validations": [
              {
                "id": "require_image_selection",
                "rule": "response_field_required",
                "field": "selected_content_id",
                "severity": "error",
                "message": "Please select an image before continuing",
                "validator": ["webui", "server"]
              }
            ]
          },
          {
            "id": "retry",
            "mode": "retry",
            "label": "Regenerate prompts",
            "shortcut": "r",
            "target_module": "generate_and_select_images_v2",
            "hidden": true,
            "feedback": {
              "enabled": true,
              "prompt": "What should be different?",
              "default_message": "Please generate different image prompts with more variety in composition and mood."
            }
          },
          {
            "id": "change_scene",
            "mode": "jump",
            "hidden": true,
            "label": "Choose different scene",
            "target_step": "scene_generation",
            "target_module": "select_scene"
          }
        ]
      },
      "name": "generate_and_select_images_v2"
    }
  ]
}
