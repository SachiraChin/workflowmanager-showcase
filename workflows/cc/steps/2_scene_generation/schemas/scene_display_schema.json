{
  "type": "object",
  "_ux.display": "passthrough",
  "properties": {
    "scenes": {
      "type": "array",
      "_ux.display": "visible",
      "_ux.render_as": "card-stack",
      "items": {
        "type": "object",
        "_ux": {
          "display": "visible",
          "render_as": "card",
          "nudges": ["index-badge"],
          "selectable": true
        },
        "properties": {
          "title": {
            "type": "string",
            "_ux.display": true,
            "_ux.render_as": "card-title"
          },
          "hook": {
            "type": "string",
            "_ux": {
              "display": true,
              "render_as": "card-subtitle",
              "highlight": true
            }
          },
          "narrative": {
            "type": "string",
            "_ux.display": true,
            "_ux.display_label": "Story"
          },
          "visual_moments": {
            "type": "array",
            "_ux": {
              "display": true,
              "display_label": "Key Moments",
              "display_format": "{{ value | join(' â†’ ') }}"
            }
          },
          "pet_behavior": {
            "type": "string",
            "_ux": {
              "display": true,
              "display_label": "Pet Focus",
              "highlight": true,
              "highlight_color": "#FFB347"
            }
          },
          "emotional_arc": {
            "type": "string",
            "_ux.display": true,
            "_ux.display_label": "Emotional Arc"
          },
          "setting": {
            "type": "string",
            "_ux.display": true,
            "_ux.display_label": "Setting"
          }
        }
      }
    }
  }
}
