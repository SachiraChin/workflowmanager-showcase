{
  "type": "object",
  "properties": {
    "options": {
      "type": "array",
      "minItems": 5,
      "maxItems": 5,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Evocative 2-3 word name"
          },
          "description": {
            "type": "string",
            "description": "Human-readable summary: instrument + texture + emotional feel (15-25 words)"
          },
          "bpm": {
            "type": "integer",
            "description": "Tempo in beats per minute",
            "minimum": 50,
            "maximum": 120
          },
          "key": {
            "type": "string",
            "description": "Musical key signature (e.g., 'G major', 'A minor')"
          },
          "instruments": {
            "type": "array",
            "description": "2-4 instruments with texture descriptors",
            "items": {
              "type": "string"
            },
            "minItems": 2,
            "maxItems": 4
          },
          "mood": {
            "type": "array",
            "description": "2-3 mood descriptors",
            "items": {
              "type": "string"
            },
            "minItems": 2,
            "maxItems": 3
          },
          "energy": {
            "type": "string",
            "description": "Energy arc or movement feel"
          }
        },
        "required": ["name", "description", "bpm", "key", "instruments", "mood", "energy"],
        "additionalProperties": false
      }
    }
  },
  "required": ["options"],
  "additionalProperties": false
}
