{
  "type": "object",
  "properties": {
    "options": {
      "type": "array",
      "minItems": 15,
      "maxItems": 15,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Evocative 2-3 word name"
          },
          "description": {
            "type": "string",
            "description": "Human-readable summary: instrument + texture + emotional feel (15-25 words)"
          },
          "bpm": {
            "type": "integer",
            "description": "Specific tempo in beats per minute (50-120 range typical)",
            "minimum": 40,
            "maximum": 140
          },
          "key": {
            "type": "string",
            "description": "Musical key signature (e.g., 'C major', 'A minor', 'F# minor')"
          },
          "instruments": {
            "type": "array",
            "description": "2-4 specific instruments with texture descriptors",
            "items": {
              "type": "string"
            },
            "minItems": 2,
            "maxItems": 4
          },
          "mood": {
            "type": "array",
            "description": "2-3 expressive mood/texture descriptors (e.g., 'warm', 'airy', 'intimate', 'raw')",
            "items": {
              "type": "string"
            },
            "minItems": 2,
            "maxItems": 3
          },
          "energy": {
            "type": "string",
            "description": "Energy arc or movement feel (e.g., 'steady gentle', 'slowly building', 'drifting', 'minimal pulse')"
          }
        },
        "required": [
          "name",
          "description",
          "bpm",
          "key",
          "instruments",
          "mood",
          "energy"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "options"
  ],
  "additionalProperties": false
}