{
  "type": "array",
  "_ux.display": "visible",
  "_ux.render_as": "section-list",
  "items": {
    "type": "object",
    "_ux": {
      "display": "visible",
      "render_as": "section",
      "selectable": true
    },
    "properties": {
      "name": {
        "type": "string",
        "_ux.display": true,
        "_ux.render_as": "section-title"
      },
      "description": {
        "type": "string",
        "_ux": {
          "display": true,
          "render_as": "section-summary",
          "highlight": true
        }
      },
      "bpm": {
        "type": "integer",
        "_ux.display": true,
        "_ux.display_label": "BPM"
      },
      "key": {
        "type": "string",
        "_ux.display": true,
        "_ux.display_label": "Key"
      },
      "energy": {
        "type": "string",
        "_ux.display": true,
        "_ux.display_label": "Energy"
      },
      "instruments": {
        "type": "array",
        "_ux": {
          "display": true,
          "display_label": "Instruments",
          "display_format": "{{ value | join(', ') }}"
        }
      },
      "mood": {
        "type": "array",
        "_ux": {
          "display": true,
          "display_label": "Mood",
          "display_format": "{{ value | join(', ') }}"
        }
      }
    }
  }
}
