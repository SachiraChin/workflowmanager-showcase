{
  "step_id": "music",
  "name": "Step {step_number}: Music Generation",
  "description": "Generate music options and ElevenLabs prompts for your pet video",
  "modules": [
    {
      "module_id": "api.llm",
      "inputs": {
        "resolver_schema": {
          "type": "object",
          "properties": {
            "input": { "resolver": "server" },
            "system": { "resolver": "server" },
            "metadata": { "resolver": "server" }
          }
        },
        "ai_config": {},
        "input": {
          "$ref": "prompts/cc_music_user.txt",
          "type": "jinja2"
        },
        "output_schema": {
          "$ref": "schemas/cc_music_options_schema.json",
          "type": "json"
        },
        "metadata": {
          "step_id": "{{ step.step_id }}"
        },
        "system": [
          {
            "$ref": "prompts/cc_role_pet_music_director.txt",
            "type": "text",
            "cache_ttl": 10800
          },
          {
            "$ref": "prompts/cc_music_system.txt",
            "type": "text",
            "cache_ttl": 10800
          }
        ],
        "provider": "openai"
      },
      "outputs_to_state": {
        "response": "music_options_response"
      },
      "name": "generate_music_options"
    },
    {
      "module_id": "user.select",
      "inputs": {
        "resolver_schema": {
          "type": "object",
          "properties": {
            "data": { "resolver": "server" }
          }
        },
        "prompt": "Select a music style for your pet video",
        "data": "{{ state.music_options_response.options }}",
        "schema": {
          "$ref": "schemas/cc_music_options_display_schema.json",
          "type": "json"
        },
        "multi_select": false,
        "mode": "select"
      },
      "outputs_to_state": {
        "selected_indices": "selected_music_option_indices",
        "selected_data": "selected_music_option"
      },
      "name": "select_music_option"
    },
    {
      "module_id": "api.llm",
      "inputs": {
        "resolver_schema": {
          "type": "object",
          "properties": {
            "input": { "resolver": "server" },
            "system": { "resolver": "server" },
            "metadata": { "resolver": "server" }
          }
        },
        "ai_config": {},
        "input": {
          "$ref": "prompts/cc_elevenlabs_user.txt",
          "type": "jinja2"
        },
        "output_schema": {
          "$ref": "schemas/cc_elevenlabs_schema.json",
          "type": "json"
        },
        "metadata": {
          "step_id": "{{ step.step_id }}"
        },
        "system": [
          {
            "$ref": "prompts/cc_role_pet_music_director.txt",
            "type": "text",
            "cache_ttl": 10800
          },
          {
            "$ref": "prompts/cc_elevenlabs_system.txt",
            "type": "text",
            "cache_ttl": 10800
          }
        ],
        "provider": "openai"
      },
      "outputs_to_state": {
        "response": "elevenlabs_prompts_response"
      },
      "name": "generate_elevenlabs_prompts"
    },
    {
      "module_id": "user.select",
      "inputs": {
        "resolver_schema": {
          "type": "object",
          "properties": {
            "data": { "resolver": "server" }
          }
        },
        "prompt": "Review ElevenLabs prompts for your pet video soundtrack",
        "data": "{{ state.elevenlabs_prompts_response }}",
        "schema": {
          "type": "object",
          "_ux": {
            "display_mode": "review",
            "render_as": "card",
            "nudges": ["index-badge"]
          },
          "properties": {
            "track_title": {
              "type": "string",
              "_ux": {
                "display": true,
                "display_label": "Track Title",
                "render_as": "card-title"
              }
            },
            "elevenlabs_prompt_precise": {
              "type": "string",
              "_ux.display": true,
              "_ux.display_label": "Precise Prompt"
            },
            "elevenlabs_prompt_evocative": {
              "type": "string",
              "_ux.display": true,
              "_ux.display_label": "Evocative Prompt"
            },
            "elevenlabs_prompt_voiceover": {
              "type": "string",
              "_ux.display": true,
              "_ux.display_label": "Voiceover Prompt"
            }
          }
        },
        "mode": "review"
      },
      "outputs_to_state": {
        "retry_requested": "elevenlabs_retry_requested"
      },
      "retryable": {
        "default_option": "continue",
        "options": [
          {
            "id": "continue",
            "mode": "continue",
            "label": "Accept and continue"
          },
          {
            "id": "retry",
            "mode": "retry",
            "label": "Regenerate prompts",
            "shortcut": "r",
            "target_module": "generate_elevenlabs_prompts",
            "feedback": {
              "enabled": true,
              "prompt": "What should be different?",
              "default_message": "Please generate different music prompts with a fresh approach."
            }
          },
          {
            "id": "change_style",
            "mode": "jump",
            "label": "Choose different music style",
            "target_step": "music",
            "target_module": "select_music_option"
          }
        ]
      },
      "name": "review_elevenlabs_prompts"
    }
  ]
}
