{
  "step_id": "titles_social",
  "name": "Step {step_number}: Titles & Social",
  "description": "Generate engaging titles and descriptions for social media publishing",
  "modules": [
    {
      "module_id": "api.llm",
      "inputs": {
        "resolver_schema": {
          "type": "object",
          "properties": {
            "input": { "resolver": "server" },
            "system": { "resolver": "server" },
            "metadata": { "resolver": "server" }
          }
        },
        "ai_config": {},
        "input": {
          "$ref": "prompts/cc_titles_social_user.txt",
          "type": "jinja2"
        },
        "output_schema": {
          "$ref": "schemas/cc_titles_social_schema.json",
          "type": "json"
        },
        "metadata": {
          "step_id": "{{ step.step_id }}"
        },
        "system": [
          {
            "$ref": "prompts/cc_role_pet_social_strategist.txt",
            "type": "text",
            "cache_ttl": 10800
          },
          {
            "$ref": "prompts/cc_titles_social_system.txt",
            "type": "text",
            "cache_ttl": 10800
          }
        ],
        "provider": "openai"
      },
      "outputs_to_state": {
        "response": "titles_social_response"
      },
      "name": "generate_titles_social"
    },
    {
      "module_id": "user.select",
      "inputs": {
        "resolver_schema": {
          "type": "object",
          "properties": {
            "data": { "resolver": "server" }
          }
        },
        "prompt": "Select a title and description for your pet video",
        "data": "{{ state.titles_social_response.options }}",
        "schema": {
          "$ref": "schemas/cc_titles_social_display_schema.json",
          "type": "json"
        },
        "multi_select": false,
        "mode": "select"
      },
      "outputs_to_state": {
        "selected_indices": "selected_title_description_index",
        "selected_data": "selected_title_description"
      },
      "retryable": {
        "default_option": "continue",
        "options": [
          {
            "id": "continue",
            "mode": "continue",
            "label": "Continue"
          },
          {
            "id": "retry",
            "mode": "retry",
            "label": "Regenerate titles & descriptions",
            "shortcut": "r",
            "target_module": "generate_titles_social",
            "feedback": {
              "enabled": true,
              "prompt": "What should be different?",
              "default_message": "Please generate different titles and descriptions with a fresh approach."
            }
          }
        ]
      },
      "name": "select_title_description"
    }
  ]
}